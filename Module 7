data(mtcars)
names <- rownames(mtcars)
names
library(ggplot2)
plot <- ggplot(mtcars, aes(x = mpg)) +
  geom_histogram(aes(fill = factor(cyl))) +
  labs(
    title = "Miles per Gallon vs cyl",
    x = "Miles per Gallon",
    y = "Count of cars",
    fill = "Cylinders"
  )
plot
