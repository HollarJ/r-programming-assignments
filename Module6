# Matrix Addition & Subtraction

A <- matrix(c(2, 0, 1, 3), ncol = 2)
B <- matrix(c(5, 2, 4, -1), ncol = 2)
Sum <- A + B
Difference <- A - B
Sum
Difference

# Create a Diagonal Matrix
D <- diag(c(4, 1, 2, 3))
D

# Construct a Custom 5Ã—5 Matrix

matrix1 <- diag(c(3, 3, 3, 3,3))
matrix1[1, 2:5] <- 1
matrix1[2:5, 1] <- 2
matrix1

